<%- include('partials/header', { title: 'Add Event' }) %>

<div class="container">
    <h1>
        <span class="lang-en">Add New Event</span>
        <span class="lang-es">Agregar Nuevo Evento</span>
    </h1>

    <% if (error_message) { %>
        <div class="error"><%= error_message %></div>
    <% } %>

    <form action="/addEvent" method="POST" class="event-form">

        <!-- Event Name -->
        <div class="form-group">
            <label for="EventName">
                <span class="lang-en">Event Name *</span>
                <span class="lang-es">Nombre del Evento *</span>
            </label>
            <input type="text" id="EventName" name="EventName" required>
        </div>

        <!-- Event Type -->
        <div class="form-group">
            <label for="EventType">
                <span class="lang-en">Event Type *</span>
                <span class="lang-es">Tipo de Evento *</span>
            </label>
            <input type="text" id="EventType" name="EventType" required>
        </div>

        <!-- Event Description -->
        <div class="form-group">
            <label for="EventDescription">
                <span class="lang-en">Event Description *</span>
                <span class="lang-es">Descripci贸n del Evento *</span>
            </label>
            <textarea id="EventDescription" name="EventDescription" rows="4" required></textarea>
        </div>

        <!-- Recurrence Pattern -->
        <div class="form-group">
            <label for="RecurrencePattern">
                <span class="lang-en">Recurrence Pattern *</span>
                <span class="lang-es">Patr贸n de Repetici贸n *</span>
            </label>
            <select id="RecurrencePattern" name="RecurrencePattern" required>
                <option value="">
                    <span class="lang-en">-- Select Pattern --</span>
                    <span class="lang-es">-- Seleccione Patr贸n --</span>
                </option>
                <option value="None">
                    <span class="lang-en">None</span>
                    <span class="lang-es">Ninguno</span>
                </option>
                <option value="Daily">
                    <span class="lang-en">Daily</span>
                    <span class="lang-es">Diario</span>
                </option>
                <option value="Weekly">
                    <span class="lang-en">Weekly</span>
                    <span class="lang-es">Semanal</span>
                </option>
                <option value="Monthly">
                    <span class="lang-en">Monthly</span>
                    <span class="lang-es">Mensual</span>
                </option>
            </select>
        </div>

        <!-- Default Capacity -->
        <div class="form-group">
            <label for="EventDefaultCapacity">
                <span class="lang-en">Default Capacity *</span>
                <span class="lang-es">Capacidad Predeterminada *</span>
            </label>
            <input type="number" id="EventDefaultCapacity" name="EventDefaultCapacity" min="1" required>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="submit-btn">
            <span class="lang-en">Add Event</span>
            <span class="lang-es">Agregar Evento</span>
        </button>

    </form>
</div>

<%- include('partials/footer') %>
