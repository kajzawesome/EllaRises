<%- include('../partials/header', { title: 'Dashboard' }) %>

<title><%= title || "Dashboard" %></title>

<div class="admin-container">

    <!-- Sidebar -->
    <aside class="admin-sidebar">
        <div class="admin-links">
            <a href="/admin">
                <span class="lang-en">Dashboard</span>
                <span class="lang-es">Panel</span>
            </a>
            <a href="/admin/add-event">
                <span class="lang-en">Add Event / Program</span>
                <span class="lang-es">Agregar Evento / Programa</span>
            </a>
            <a href="/admin/manageusers">
                <span class="lang-en">Manage Users</span>
                <span class="lang-es">Administrar Usuarios</span>
            </a>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">

        <!-- Tableau Section -->
        <section class="tableau-section">
            <h2>
                <span class="lang-en">Program & Event Analytics</span>
                <span class="lang-es">Analítica de Programas y Eventos</span>
            </h2>

            <div class="tableau-container">
                <iframe 
                    src="YOUR_TABLEAU_EMBED_URL"
                    width="100%" 
                    height="600px" 
                    frameborder="0">
                </iframe>
            </div>
        </section>

        <!-- Upcoming Events & Occurrences -->
        <section class="upcoming-items">
            <h2>
                <span class="lang-en">Upcoming Programs & Events</span>
                <span class="lang-es">Próximos Programas y Eventos</span>
            </h2>

            <% if (upcomingItems && upcomingItems.length > 0) { %>

                <% upcomingItems.forEach(item => { %>
                    <div class="admin-item-card">
                        
                        <!-- Event Info -->
                        <div class="admin-item-details">
                            <h3><%= item.eventname %></h3>

                            <p>
                                <strong><span class="lang-en">Type:</span>
                                        <span class="lang-es">Tipo:</span>
                                </strong> 
                                <%= item.eventtype %>
                            </p>

                            <p>
                                <strong><span class="lang-en">Date:</span>
                                        <span class="lang-es">Fecha:</span>
                                </strong>
                                <%= new Date(item.eventdatestart).toLocaleDateString() %>
                                @ <%= item.eventtimestart %>
                            </p>

                            <p>
                                <strong><span class="lang-en">Location:</span>
                                        <span class="lang-es">Ubicación:</span>
                                </strong> 
                                <%= item.eventlocation %>
                            </p>
                        </div>

                        <!-- Edit -->
                        <a href="/admin/edit-event/<%= item.eventoccurrenceid %>" class="edit-btn">
                            <span class="lang-en">Edit</span>
                            <span class="lang-es">Editar</span>
                        </a>
                    </div>
                <% }) %>

            <% } else { %>
                <p>
                    <span class="lang-en">No upcoming programs or events.</span>
                    <span class="lang-es">No hay próximos programas o eventos.</span>
                </p>
            <% } %>

        </section>

    </main>

</div>

<%- include('../partials/footer') %>