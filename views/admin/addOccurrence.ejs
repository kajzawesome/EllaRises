    <aside class="admin-sidebar">
        <h3><span class="lang-en">Admin Tools</span><span class="lang-es">Herramientas Admin</span></h3>
        <a class="admin-btn" href="/admin/dashboard"> <span class="lang-en">Dashboard</span><span class="lang-es">Panel</span></a>
        <a class="admin-btn" href="/admin/add-event"> <span class="lang-en">Add Event/Program</span><span class="lang-es">Agregar Evento/Programa</span></a>
        <a class="admin-btn" href="/manageevents"> <span class="lang-en">Manage Events</span><span class="lang-es">Administrar Eventos</span></a>
        <a class="admin-btn" href="/admin/manageusers"> <span class="lang-en">Manage Users</span><span class="lang-es">Administrar Usuarios</span></a>
        <a class="admin-btn" href="/admin/survey-responses"> <span class="lang-en">Manage Surveys</span><span class="lang-es">Administrar Encuestas</span></a>
        <a class="admin-btn" href="/admin/managedonations"> <span class="lang-en">Manage Donations</span><span class="lang-es">Administrar Donaciones</span></a>
    </aside>

    <!-- Sidebar -->
    <aside class="admin-sidebar">
      <h3><span class="lang-en">Admin Tools</span><span class="lang-es">Herramientas Admin</span></h3>
      <a class="admin-btn" href="/admin/dashboard"> <span class="lang-en">Dashboard</span><span
          class="lang-es">Panel</span></a>
      <a class="admin-btn" href="/admin/add-event"> <span class="lang-en">Add Event/Program</span><span
          class="lang-es">Agregar Evento/Programa</span></a>
      <a class="admin-btn" href="/admin/manageevents"> <span class="lang-en">Manage Events</span><span
          class="lang-es">Administrar Eventos</span></a>
      <a class="admin-btn" href="/admin/manageusers"> <span class="lang-en">Manage Users</span><span
          class="lang-es">Administrar Usuarios</span></a>
      <a class="admin-btn" href="/admin/surveys"> <span class="lang-en">Manage Surveys</span><span
          class="lang-es">Administrar Encuestas</span></a>
      <a class="admin-btn" href="/admin/managedonations"> <span class="lang-en">Manage Donations</span><span
          class="lang-es">Administrar Donaciones</span></a>
    </aside>

  <main class="admin-main">
    
    <h2>
      <span class="lang-en">Add Event Occurrence</span>
      <span class="lang-es">Agregar Fecha del Evento</span>
    </h2>

    <form action="/admin/event/<%= eventid %>/new-occurrence" method="POST" class="event-edit-form">

      <label>
        <span class="lang-en">Start Date</span>
        <span class="lang-es">Fecha Inicio</span>
      </label>
      <input type="date" name="eventdatestart" required>

      <label>
        <span class="lang-en">Start Time</span>
        <span class="lang-es">Hora Inicio</span>
      </label>
      <input type="time" name="eventtimestart" required>

      <label>
        <span class="lang-en">End Date</span>
        <span class="lang-es">Fecha Fin</span>
      </label>
      <input type="date" name="eventdateend" required>

      <label>
        <span class="lang-en">End Time</span>
        <span class="lang-es">Hora Fin</span>
      </label>
      <input type="time" name="eventtimeend" required>

      <label>
        <span class="lang-en">Location</span>
        <span class="lang-es">Ubicación</span>
      </label>
      <input type="text" name="eventlocation" required>

      <label>
        <span class="lang-en">Capacity</span>
        <span class="lang-es">Capacidad</span>
      </label>
      <input type="number" name="eventcapacity" min="1" required>

      <label>
        <span class="lang-en">Registration Deadline Date</span>
        <span class="lang-es">fecha límite de inscripción</span>
      </label>
      <input type="date" name="eventregistrationdeadlinedate" required>

      <label>
        <span class="lang-en">Registration Deadline Time</span>
        <span class="lang-es">hora límite de inscripción</span>
      </label>
      <input type="time" name="eventregistrationdeadlinetime" required>

      <button type="submit" class="edit-btn" style="margin-top:20px;">
        <span class="lang-en">Save Occurrence</span>
        <span class="lang-es">Guardar Fecha</span>
      </button>

    </form>

  </main>
</div>

<%- include('../partials/footer') %>