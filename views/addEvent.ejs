<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add New Event</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <div class="container">
        <h1>Add New Event</h1>

        <% if (error_message) { %>
            <div class="error"><%= error_message %></div>
        <% } %>

        <form action="/addEvent" method="POST" class="event-form">

            <!-- Event Name -->
            <div class="form-group">
                <label for="EventName">Event Name</label>
                <input type="text" id="EventName" name="EventName" required>
            </div>

            <!-- Event Type -->
            <div class="form-group">
                <label for="EventType">Event Type</label>
                <input type="text" id="EventType" name="EventType" required>
            </div>

            <!-- Event Description -->
            <div class="form-group">
                <label for="EventDescription">Event Description</label>
                <textarea id="EventDescription" name="EventDescription" rows="4" required></textarea>
            </div>

            <!-- Recurrence Pattern -->
            <div class="form-group">
                <label for="RecurrencePattern">Recurrence Pattern</label>
                <select id="RecurrencePattern" name="RecurrencePattern" required>
                    <option value="">-- Select Pattern --</option>
                    <option value="None">None</option>
                    <option value="Daily">Daily</option>
                    <option value="Weekly">Weekly</option>
                    <option value="Monthly">Monthly</option>
                </select>
            </div>

            <!-- Default Capacity -->
            <div class="form-group">
                <label for="EventDefaultCapacity">Default Capacity</label>
                <input type="number" id="EventDefaultCapacity" name="EventDefaultCapacity" min="1" required>
            </div>

            <button type="submit" class="submit-btn">Add Event</button>
        </form>
    </div>
</body>
</html>
