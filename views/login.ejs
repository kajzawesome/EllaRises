<%- include('partials/header', { title: 'Login' }) %>
<br><br>
<div class="login-wrapper">

    <div class="login-card">
        <h1>
            <span class="lang-en">Login</span>
            <span class="lang-es">Iniciar Sesión</span>
        </h1>

        <% if (error_message && error_message !== "") { %>
            <p class="login-error">
                <span class="lang-en"><%= error_message %></span>
                <span class="lang-es"><%= error_message %></span>
            </p>
        <% } %>

        <!-- Login Form -->
        <form action="/login" method="POST" class="login-form">
            <div>
                <label for="username">
                    <span class="lang-en">Username *</span>
                    <span class="lang-es">Nombre de Usuario *</span>
                </label>
                <input type="text" id="username" name="username" required autofocus>
            </div>

            <div>
                <label for="password">
                    <span class="lang-en">Password *</span>
                    <span class="lang-es">Contraseña *</span>
                </label>
                <input type="password" id="password" name="password" required>
            </div>

            <button type="submit" class="login-btn">Login</button>
        </form>

        <!-- Create Account -->
        <form action="/addUser" method="GET">
            <button type="submit" class="create-btn">Create Account</button>
        </form>
    </div>

</div>


<%- include('partials/footer') %>