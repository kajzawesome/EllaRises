<%- include('partials/header', { title: 'Login' }) %>

<div class="login-container">
    <h1>
        <span class="lang-en">Login</span>
        <span class="lang-es">Iniciar Sesión</span>
    </h1>

    <% if (error_message && error_message !== "") { %>
        <h3 id="error_message" name="error_message">
            <span class="lang-en"><%= error_message %></span>
            <span class="lang-es"><%= error_message_es || error_message %></span>
        </h3>
    <% } %>
    <br>

    <!-- Login Form -->
    <form action="/login" method="POST">
        <div>
            <label for="username">
                <span class="lang-en">Username *</span>
                <span class="lang-es">Nombre de Usuario *</span>
            </label>
            <input type="text" id="username" name="username" required autofocus>
        </div>
        <br>
        <div>
            <label for="password">
                <span class="lang-en">Password *</span>
                <span class="lang-es">Contraseña *</span>
            </label>
            <input type="password" id="password" name="password" required>
        </div>
        <br>
        <div>
            <button type="submit">
                <span class="lang-en">Login</span>
                <span class="lang-es">Iniciar Sesión</span>
            </button>
        </div>
    </form>

    <!-- Create Account Button -->
    <form action="/addUser" method="GET">
        <div>
            <button type="submit">
                <span class="lang-en">Create Account</span>
                <span class="lang-es">Crear Cuenta</span>
            </button>
        </div>
    </form>
</div>

<%- include('partials/footer') %>