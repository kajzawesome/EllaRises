<%- include('../partials/header', { title: title , user: user, lang: lang }) %>

<div class="section">
    <div class="section-content" style="flex-direction:column; align-items:flex-start;">
        <h1>
            <span class="lang-en">Add Child</span>
            <span class="lang-es">Agregar Hija</span>
        </h1>

        <form action="/account/participant/add" method="POST" style="max-width:600px; margin-top:20px;">

            <!-- First Name -->
            <label>
                <span class="lang-en">First Name *</span>
                <span class="lang-es">Nombre *</span>
                <input type="text" name="participantfirstname" required>
            </label>
            <br>

            <!-- Last Name -->
            <label>
                <span class="lang-en">Last Name *</span>
                <span class="lang-es">Apellido *</span>
                <input type="text" name="participantlastname" required>
            </label>
            <br>

            <!-- Email -->
            <label>
                <span class="lang-en">Email *</span>
                <span class="lang-es">Correo *</span>
                <input type="email" name="participantemail" required>
            </label>
            <br>

            <!-- DOB -->
            <label>
                <span class="lang-en">Date of Birth</span>
                <span class="lang-es">Fecha de Nacimiento</span>
                <input type="date" name="participantdob">
            </label>
            <br>

            <!-- Grade -->
            <label>
                <span class="lang-en">Grade</span>
                <span class="lang-es">Grado</span>
                <input type="text" name="participantgrade">
            </label>
            <br>

            <!-- School / Employer -->
            <label>
                <span class="lang-en">School or Employer</span>
                <span class="lang-es">Escuela o Empleador</span>
                <input type="text" name="participantschooloremployer">
            </label>
            <br>

            <!-- Field of Interest -->
            <label>
                <span class="lang-en">Field of Interest</span>
                <span class="lang-es">Área de Interés</span>
                <input type="text" name="participantfieldofinterest">
            </label>
            <br>

            <!-- Mariachi Instrument -->
            <label>
                <span class="lang-en">Mariachi Instrument Interest</span>
                <span class="lang-es">Instrumento de Mariachi</span>
                <select name="mariachiinstrumentinterest">
                    <option value="">-- Select --</option>
                    <option value="violin">Violin</option>
                    <option value="guitar">Guitar / Guitarra</option>
                    <option value="trumpet">Trumpet / Trompeta</option>
                    <option value="guitarron">Guitarrón</option>
                    <option value="vihuela">Vihuela</option>
                    <option value="voice">Voice</option>
                    <option value="other">Other</option>
                </select>
            </label>
            <br>

            <!-- Instrument Experience -->
            <label>
                <span class="lang-en">Instrument Experience</span>
                <span class="lang-es">Experiencia con Instrumentos</span>
                <input type="text" name="instrumentexperience">
            </label>
            <br>

            <button type="submit" class="button" style="margin-top:12px;">
                <span class="lang-en">Add Child</span>
                <span class="lang-es">Agregar Hija</span>
            </button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>