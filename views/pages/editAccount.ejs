<%- include('../partials/header', { title: 'Edit Parent Account' }) %>

<div class="form-container">
    <h1>
        <span class="lang-en">Edit Account</span>
        <span class="lang-es">Editar Cuenta</span>
    </h1>

    <!-- Error Message -->
    <% if (error_message && error_message.length > 0) { %>
        <div class="error-box">
            <%= error_message %>
        </div>
    <% } %>

    <form action="/account/<%= parent.parentid %>/edit" method="POST">

        <!-- Parent Email -->
        <div>
            <label for="parentemail">
                <span class="lang-en">Email *</span>
                <span class="lang-es">Correo Electrónico *</span>
            </label>
            <input 
                type="email" 
                id="parentemail" 
                name="parentemail" 
                value="<%= parent.parentemail %>" 
                required>
        </div>
        <br>

        <!-- First Name -->
        <div>
            <label for="parentfirstname">
                <span class="lang-en">First Name *</span>
                <span class="lang-es">Nombre *</span>
            </label>
            <input 
                type="text" 
                id="parentfirstname" 
                name="parentfirstname" 
                value="<%= parent.parentfirstname %>" 
                required>
        </div>
        <br>

        <!-- Last Name -->
        <div>
            <label for="parentlastname">
                <span class="lang-en">Last Name *</span>
                <span class="lang-es">Apellido *</span>
            </label>
            <input 
                type="text" 
                id="parentlastname" 
                name="parentlastname" 
                value="<%= parent.parentlastname %>" 
                required>
        </div>
        <br>

        <!-- Phone -->
        <div>
            <label for="parentphone">
                <span class="lang-en">Phone *</span>
                <span class="lang-es">Teléfono *</span>
            </label>
            <input 
                type="text" 
                id="parentphone" 
                name="parentphone" 
                value="<%= parent.parentphone %>" 
                required>
        </div>
        <br>

        <!-- Preferred Language -->
        <div>
            <label for="preferredlanguage">
                <span class="lang-en">Preferred Language *</span>
                <span class="lang-es">Idioma Preferido *</span>
            </label>
            <select id="preferredlanguage" name="preferredlanguage" required>
                <option value="English" <%= parent.preferredlanguage === 'English' ? 'selected' : '' %>>English</option>
                <option value="Spanish" <%= parent.preferredlanguage === 'Spanish' ? 'selected' : '' %>>Spanish</option>
            </select>
        </div>
        <br>

        <!-- Parent College -->
        <div>
            <label for="parentcollege">
                <span class="lang-en">Parent College</span>
                <span class="lang-es">Universidad</span>
            </label>
            <input 
                type="text" 
                id="parentcollege" 
                name="parentcollege" 
                value="<%= parent.parentcollege %>">
        </div>
        <br>

        <!-- Photo/Video Consent -->
        <div>
            <label for="photovideoconsent">
                <span class="lang-en">Photo/Video Consent *</span>
                <span class="lang-es">Consentimiento de Foto/Video *</span>
            </label>
            <select id="photovideoconsent" name="photovideoconsent" required>
                <option value="Yes" <%= parent.photovideoconsent === 'Yes' ? 'selected' : '' %>>Yes</option>
                <option value="No" <%= parent.photovideoconsent === 'No' ? 'selected' : '' %>>No</option>
            </select>
        </div>
        <br>

        <!-- Submit -->
        <button class="submit-btn" type="submit">
            <span class="lang-en">Save Changes</span>
            <span class="lang-es">Guardar Cambios</span>
        </button>

    </form>
</div>

<%- include('../partials/footer') %>