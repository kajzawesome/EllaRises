<%- include('partials/header', { title: "Donate" , user: user, lang: lang }) %>

  <div class="donation-container">
    <h1>
      <span class="lang-en">Make a Donation</span>
      <span class="lang-es">Hacer una Donación</span>
    </h1>

    <p>
      <span class="lang-en">Your support helps us continue our mission. Thank you for contributing!</span>
      <span class="lang-es">Tu apoyo nos ayuda a continuar con nuestra misión. ¡Gracias por contribuir!</span>
    </p>

    <% if (typeof error_message !=='undefined' && error_message) { %>
      <div class="error">
        <%= error_message %>
      </div>
      <% } %>

        <% if (typeof success_message !=='undefined' && success_message) { %>
          <div class="success">
            <%= success_message %>
          </div>
          <% } %>

            <form action="/donate" method="POST" class="donation-form">

              <!-- Donor Info -->
              <h2>
                <span class="lang-en">Your Information</span>
                <span class="lang-es">Tu Información</span>
              </h2>

              <label for="name">
                <span class="lang-en">Full Name</span>
                <span class="lang-es">Nombre Completo</span>
              </label>
              <input type="text" id="name" name="name" placeholder="<%= lang === 'es' ? 'Tu Nombre' : 'Your Name' %>"
                value="<%= (form && form.name) || '' %>" required />

              <label for="email">
                <span class="lang-en">Email Address</span>
                <span class="lang-es">Correo Electrónico</span>
              </label>
              <input type="email" id="email" name="email"
                placeholder="<%= lang === 'es' ? 'tu@ejemplo.com' : 'you@example.com' %>"
                value="<%= (form && form.email) || '' %>" required />

              <!-- Donation Amount -->
              <h2>
                <span class="lang-en">Donation Amount</span>
                <span class="lang-es">Cantidad de Donación</span>
              </h2>

              <div class="amount-options" role="radiogroup" aria-label="Donation amounts">
                <label>
                  <input type="radio" name="amount" value="10" <%=(form && form.amount=='10' ) ? 'checked' : '' %> />
                  $10
                </label>

                <label>
                  <input type="radio" name="amount" value="25" <%=(form && form.amount=='25' ) ? 'checked' : '' %> />
                  $25
                </label>

                <label>
                  <input type="radio" name="amount" value="50" <%=(form && form.amount=='50' ) ? 'checked' : '' %> />
                  $50
                </label>

                <label>
                  <input type="radio" name="amount" value="100" <%=(form && form.amount=='100' ) ? 'checked' : '' %> />
                  $100
                </label>

                <label>
                  <input type="radio" name="amount" value="250" <%=(form && form.amount=='250' ) ? 'checked' : '' %> />
                  $250
                </label>

                <div class="custom-amount" style="display:block; margin-top:10px;">
                  <label for="customAmount">
                    <span class="lang-en">Custom Amount ($)</span>
                    <span class="lang-es">Cantidad Personalizada ($)</span>
                  </label>
                  <input type="number" id="customAmount" name="customAmount" min="1"
                    placeholder="<%= lang === 'es' ? 'Ingrese cantidad' : 'Enter amount' %>"
                    value="<%= (form && form.customAmount) || '' %>" />
                </div>
              </div>

              <!-- Optional Message -->
              <h2>
                <span class="lang-en">Message (Optional)</span>
                <span class="lang-es">Mensaje (Opcional)</span>
              </h2>
              <textarea name="message" rows="4"
                placeholder="<%= lang === 'es' ? 'Escribe una nota u orden especial (opcional)' : 'Add a note or special instructions (optional)' %>"><%= (form && form.message) || '' %></textarea>

              <button type="submit" class="donate-button">
                <span class="lang-en">Donate Now</span>
                <span class="lang-es">Donar Ahora</span>
              </button>
            </form>
  </div>

  <%- include('partials/footer') %>