<%- include('../partials/header', { title: 'Add Milestone' , user: user, lang: lang }) %>

    <div class="section">
        <div class="section-content" style="flex-direction:column; align-items:flex-start;">
            <h1><span class="lang-en">Add Milestone</span><span class="lang-es">Agregar Hito</span></h1>

            <form action="/account/participant/<%= participantId %>/milestones/add" method="POST"
                style="max-width:600px; margin-top:20px;">

                <label>
                    <span class="lang-en">Title</span><span class="lang-es">TÃ­tulo</span>
                    <input type="text" name="milestonetitle" required>
                </label>

                <label>
                    <span class="lang-en">Date</span><span class="lang-es">Fecha</span>
                    <input type="date" name="milestonedate" required>
                </label>

                <label>
                    <span class="lang-en">Status</span><span class="lang-es">Estado</span>
                    <select name="milestonestatus" required>
                        <option value="Not Started">Not Started / No Iniciado</option>
                        <option value="In Progress">In Progress / En Progreso</option>
                        <option value="Completed">Completed / Completado</option>
                        <option value="Deferred">Deferred / Pospuesto</option>
                    </select>
                </label>

                <button type="submit" class="button" style="margin-top:12px;">
                    <span class="lang-en">Add Milestone</span>
                    <span class="lang-es">Agregar Hito</span>
                </button>

            </form>
        </div>
    </div>

    <%- include('../partials/footer') %>